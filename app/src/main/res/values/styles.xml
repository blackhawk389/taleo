<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Objectives" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/nexa_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>

    <style name="app_layout">
        <item name="background">@color/app_background</item>
    </style>

    <style name="app_title_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_22sp</item>
        <item name="fontFamily">@font/nexa_bold</item>

    </style>

    <style name="app_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_18sp</item>

    </style>

    <style name="app_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_26sp</item>
        <item name="fontFamily">@font/nexa_bold</item>

    </style>

    <style name="button_style">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="heading_texts">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="fontFamily">@font/nexa_bold</item>

    </style>

    <style name="edit_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconMode">clear_text</item>

    </style>
</resources>